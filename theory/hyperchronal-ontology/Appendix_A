\section{Code Snippets}

\subsection{Sample Python (Matplotlib) for Soliton Figure}
\begin{verbatim}
import numpy as np
import matplotlib.pyplot as plt
from mpl_toolkits.mplot3d import Axes3D

theta = np.linspace(0, 4 * np.pi, 200)
x = np.sin(theta) * (1 + 0.5 * np.cos(3 * theta))
y = np.cos(theta) * (1 + 0.5 * np.cos(3 * theta))
z = 0.5 * np.sin(3 * theta)

fig = plt.figure()
ax = fig.add_subplot(111, projection='3d')
ax.plot(x, y, z)
ax.set_title('Topological Soliton in Ψ-Field')
plt.savefig('figures/soliton.pdf')
\end{verbatim}

\subsection{LaTeX (TikZ) for Screening Potential}
